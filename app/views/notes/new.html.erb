<h1 class='title'>New Note</h1>

<div class="section">
  <%= simple_form_for @note do |x| %>
  <div class="field">
    <div class="control">
      <%= x.input :title, input_html: { class: 'input'}, wrapper: false, label_html: { class: 'label'} %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= x.input :content, input_html: { class: 'textarea'}, wrapper: false, label_html: { class: 'label'} %>
    </div>
  </div>
  <%= x.button :submit, 'Save note', class: "button is-primary" %>
  <% end %>
</div>
