<%= form_for "", url: questions_path, role: "search", method: :get do %>
<%= text_field_tag :search, @search_term, placeholder: "Search..."%>
<% end %>

<% if @questions == nil %>
  <% redirect_to error_path %>
  <% else %>
  <% @questions.each do |question| %>
  <ul>
    <a href="/questions/<%= question.id %> "><li>
    <strong>  <h1> <%= question.question_title %> </hl> </strong>
      <h2> <%=question.lab %> </h2>
      <p> <%= question.question_content %></p>
      Asked by: <%= User.find(question.user_id).username %>
    </li></a>
    <br>
    <br>
  </ul>
  <% end %>
  <% end %>
